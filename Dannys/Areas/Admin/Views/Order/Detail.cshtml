@model Order

@{
    int count = 1;
    decimal total = 0;
}
<div class="main-panel" style="padding:0px">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Order detail</h3>

        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Count</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        total += (item.Count * item.StaticPrice);
                                        <tr class="orderRow">
                                            <td>@(count++)</td>
                                            <td>
                                                <a asp-area="@null" asp-controller="Shop" asp-action="Detail" asp-route-id="@item.Product.Id">

                                                    <img class="orderImg"
                                                         src="@item.Product.ProductImgs.FirstOrDefault(x=>x.IsMain)?.Url"
                                                         alt="" />
                                                </a>
                                            </td>
                                            <td><a asp-area="@null" asp-action="detail" asp-controller="shop" asp-route-id="@item.Product.Id">@item.Product.Name</a></td>
                                            <td>@item.Count</td>
                                            <td>$ @item.StaticPrice</td>
                                        </tr>


                                    }

                                </tbody>
                            </table>
                            <div style="display:flex;align-items:center;gap:20px;padding:20px 0;">
                                <h4>Total : $@total</h4>
                                <h4>Status :</h4>
                                @{
                                    if (Model.IsCanceled == false)
                                    {
                                        if (Model.Status == true)
                                        {
                                            <p class="btn btn-success statusOutput">Delivered</p>
                                        }
                                        else if (Model.Status == false)
                                        {
                                            <p class="btn btn-secondary statusOutput" >Is Ordered</p>
                                        }
                                        else
                                        {
                                            <p class="btn btn-warning statusOutput">On The Way</p>

                                        }
                                    }
                                    else
                                    {
                                        <p class="btn btn-danger cancelOutput`" >Is Canceled</p>
                                    }


                                }
                            </div>
                            <a class="btn btn-secondary" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
